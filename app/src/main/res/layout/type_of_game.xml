<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:theme="@style/Theme.WordGame">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Выберите режим игры" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="304dp"
        android:layout_height="304dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/choose_act_ic" />
    <Button
        android:id="@+id/nonstopGameButton"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нон стоп" />

    <Button
        android:id="@+id/marafonGameButton"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Марафон" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_marginTop="50dp"/>

</LinearLayout>
